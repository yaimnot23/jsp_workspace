-- 2025-11-26
-- DB 생성

-- root 계정으로 생성
-- jspdb / jspuser / mysql

create database jspdb;

use mysql;
-- user 생성
create user 'jspuser'@'localhost' identified by 'mysql';
grant all privileges on jspdb.* to 'jspuser'@'localhost';
flush privileges;

-- jspdb로 접속
-- board 테이블 생성
use jspdb;
create table board(
    bno int auto_increment not null ,
    title varchar(100) not null,
    content text not null,
    writer varchar(100) not null,
    context text,
    regdate datetime default now(),
    moddate datetime default now(),
    primary key(bno)
);

-- 2025-11-27
-- comment 테이블 생성
create table comment(
    cno int auto_increment not null,
    bno int not null,
    writer varchar(100) not null,
    content varchar(1000) not null,
    regdate datetime default now(),
    primary key(cno)
);

--------------------------------

-- 페이징
-- 2025-11-28
-- 한 페이지 10개씩 게시물 출력
-- 하단 페이지네이션 10개씩 출력

select * from board order by bno desc limit 0, 10; -- 1페이지
select * from board order by bno desc limit 10, 10; -- 2페이지
select * from board where title like '%검색어%' order by bno desc limit #(pageStart}, #{qty};

















